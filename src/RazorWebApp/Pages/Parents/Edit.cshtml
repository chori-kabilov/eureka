@page "{id:guid}"
@model RazorWebApp.Pages.Parents.EditModel
@{
    ViewData["Title"] = "Редактирование родителя";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Редактирование родителя</h1>
            <p class="page-subtitle">@Model.Parent?.FullName</p>
        </div>
        <a asp-page="/Parents/Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Назад
        </a>
    </div>
</div>

@if (Model.Parent != null)
{
    <div class="row">
        <div class="col-lg-8">
            <form method="post">
                <div class="card">
                    <div class="card-header">Информация о родителе</div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">ФИО</label>
                                <input type="text" class="form-control" value="@Model.Parent.FullName" readonly />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Телефон</label>
                                <input type="text" class="form-control" value="@Model.Parent.Phone" readonly />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Кол-во детей</label>
                                <input type="text" class="form-control" value="@Model.Parent.ChildrenCount" readonly />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Дата регистрации</label>
                                <input type="text" class="form-control" value="@Model.Parent.CreatedAt.ToString("dd.MM.yyyy")" readonly />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Заметки</label>
                            <textarea asp-for="Notes" class="form-control" rows="4" placeholder="Дополнительная информация..."></textarea>
                        </div>
                    </div>
                </div>
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg me-1"></i> Сохранить
                    </button>
                </div>
            </form>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">Родитель не найден</div>
}
