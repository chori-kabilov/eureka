@page
@model RazorWebApp.Pages.Parents.IndexModel
@{
    ViewData["Title"] = "Родители";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Родители</h1>
            <p class="page-subtitle">Управление родителями учащихся</p>
        </div>
        <a asp-page="/Parents/Create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i> Добавить родителя
        </a>
    </div>
</div>

<!-- Фильтры -->
<div class="card mb-4">
    <div class="card-body py-3">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label">Поиск</label>
                <input type="text" name="search" class="form-control" placeholder="Имя или телефон..." value="@Model.Search" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search me-1"></i> Искать
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Карточки родителей -->
<div class="row">
    @if (Model.Parents?.Items?.Any() == true)
    {
        @foreach (var parent in Model.Parents.Items)
        {
            <div class="col-md-6 col-lg-4 col-xl-3 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-start justify-content-between mb-3">
                            <div class="stat-icon purple" style="width: 48px; height: 48px; font-size: 20px; border-radius: 50%;">
                                <i class="bi bi-person-hearts"></i>
                            </div>
                            <span class="badge bg-info">@parent.ChildrenCount детей</span>
                        </div>
                        <h5 class="fw-semibold mb-1">@parent.FullName</h5>
                        <p class="text-muted small mb-3">
                            <i class="bi bi-telephone me-1"></i>@parent.Phone
                        </p>
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="text-muted small">
                                <i class="bi bi-calendar me-1"></i>@parent.CreatedAt.ToString("dd.MM.yyyy")
                            </div>
                        </div>
                        <div class="d-flex gap-1">
                            <a asp-page="/Children/Index" asp-route-parentId="@parent.Id" class="btn btn-sm btn-outline-info flex-fill" title="Дети">
                                <i class="bi bi-people me-1"></i> Дети
                            </a>
                            <form method="post" asp-page-handler="Delete" asp-route-id="@parent.Id"
                                  onsubmit="return confirm('Удалить родителя @parent.FullName?');" style="display: inline;">
                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Удалить">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="empty-state">
                        <i class="bi bi-person-hearts"></i>
                        <h5>Нет родителей</h5>
                        <p>Добавьте первого родителя</p>
                        <a asp-page="/Parents/Create" class="btn btn-primary mt-2">
                            <i class="bi bi-plus-lg me-1"></i> Добавить родителя
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if ((Model.Parents?.TotalPages ?? 0) > 1 || Model.PageSize != 12)
{
    <nav class="mt-4">
        <div class="d-flex justify-content-center align-items-center gap-3">
            <div class="d-flex align-items-center gap-2">
                <span class="text-muted small">Показывать:</span>
                <select class="form-select form-select-sm" style="width: auto;" onchange="window.location.href='?currentPage=1&search=@Model.Search&pageSize=' + this.value">
                    <option value="12" selected="@(Model.PageSize == 12)">12</option>
                    <option value="24" selected="@(Model.PageSize == 24)">24</option>
                    <option value="50" selected="@(Model.PageSize == 50)">50</option>
                </select>
            </div>
            @if ((Model.Parents?.TotalPages ?? 0) > 1)
            {
                <ul class="pagination mb-0">
                    @for (int i = 1; i <= Model.Parents!.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-page="/Parents/Index" asp-route-currentPage="@i" asp-route-search="@Model.Search" asp-route-pageSize="@Model.PageSize">@i</a>
                        </li>
                    }
                </ul>
            }
        </div>
    </nav>
}
