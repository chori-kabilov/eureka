@page
@model RazorWebApp.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Вход";
    Layout = "_Layout";
}

<div class="auth-card">
    <div class="auth-logo">
        <span class="brand-text">EUREKA</span>
        <p class="text-muted mt-2">Войдите в систему управления</p>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger mb-4">@Model.ErrorMessage</div>
    }

    <form method="post">
        <div class="mb-3">
            <label class="form-label">Телефон</label>
            <input type="tel" asp-for="Input.Phone" class="form-control" placeholder="+7 (XXX) XXX-XX-XX" required />
        </div>
        <div class="mb-4">
            <label class="form-label">Пароль</label>
            <input type="password" asp-for="Input.Password" class="form-control" placeholder="••••••••" required />
        </div>
        <button type="submit" class="btn btn-primary w-100 py-2">
            <i class="bi bi-box-arrow-in-right me-1"></i> Войти
        </button>
    </form>

    <div class="text-center mt-4">
        <a asp-page="/Auth/Register" class="text-muted">Нет аккаунта? Зарегистрироваться</a>
    </div>
</div>
