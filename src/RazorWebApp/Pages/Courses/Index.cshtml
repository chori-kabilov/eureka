@page
@model RazorWebApp.Pages.Courses.IndexModel
@{
    ViewData["Title"] = "Курсы";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Курсы</h1>
            <p class="page-subtitle">Каталог учебных курсов</p>
        </div>
        <a asp-page="/Courses/Create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i> Создать курс
        </a>
    </div>
</div>

<!-- Фильтры -->
<div class="card mb-4">
    <div class="card-body py-3">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label">Поиск</label>
                <input type="text" name="search" class="form-control" placeholder="Название курса..." value="@Model.Search" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search me-1"></i> Искать
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Карточки курсов -->
<div class="row">
    @if (Model.Courses?.Items?.Any() == true)
    {
        @foreach (var c in Model.Courses.Items)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-start justify-content-between mb-3">
                            <div class="stat-icon blue" style="width: 40px; height: 40px; font-size: 18px;">
                                <i class="bi bi-book"></i>
                            </div>
                            <span class="badge @c.StatusBadgeClass">@c.StatusName</span>
                        </div>
                        <h5 class="fw-semibold mb-2">@c.Name</h5>
                        @if (!string.IsNullOrEmpty(c.Description))
                        {
                            <p class="text-muted small mb-3" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                                @c.Description
                            </p>
                        }
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="text-muted small">
                                @if (c.DurationHours > 0)
                                {
                                    <span><i class="bi bi-clock me-1"></i>@c.DurationHours ч.</span>
                                }
                            </div>
                            <div class="d-flex gap-1">
                                <a asp-page="/Courses/Edit" asp-route-id="@c.Id" class="btn btn-sm btn-outline-primary">
                                    Редактировать
                                </a>
                                <form method="post" asp-page-handler="Delete" asp-route-id="@c.Id"
                                      onsubmit="return confirm('Удалить курс @c.Name?');" style="display: inline;">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Удалить">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="empty-state">
                        <i class="bi bi-book"></i>
                        <h5>Нет курсов</h5>
                        <p>Создайте первый курс</p>
                        <a asp-page="/Courses/Create" class="btn btn-primary mt-2">
                            <i class="bi bi-plus-lg me-1"></i> Создать курс
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if ((Model.Courses?.TotalPages ?? 0) > 1 || Model.PageSize != 12)
{
    <nav class="mt-4">
        <div class="d-flex justify-content-center align-items-center gap-3">
            <div class="d-flex align-items-center gap-2">
                <span class="text-muted small">Показывать:</span>
                <select class="form-select form-select-sm" style="width: auto;" onchange="window.location.href='?currentPage=1&search=@Model.Search&pageSize=' + this.value">
                    <option value="12" selected="@(Model.PageSize == 12)">12</option>
                    <option value="24" selected="@(Model.PageSize == 24)">24</option>
                    <option value="50" selected="@(Model.PageSize == 50)">50</option>
                </select>
            </div>
            @if ((Model.Courses?.TotalPages ?? 0) > 1)
            {
                <ul class="pagination mb-0">
                    @for (int i = 1; i <= Model.Courses!.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-page="/Courses/Index" asp-route-currentPage="@i" asp-route-search="@Model.Search" asp-route-pageSize="@Model.PageSize">@i</a>
                        </li>
                    }
                </ul>
            }
        </div>
    </nav>
}
