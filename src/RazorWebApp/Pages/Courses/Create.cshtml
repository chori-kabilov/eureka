@page
@model RazorWebApp.Pages.Courses.CreateModel
@{
    ViewData["Title"] = "Добавить курс";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-plus-lg me-2"></i>Добавить курс</h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">@Model.ErrorMessage</div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label">Название курса</label>
                            <input asp-for="Name" class="form-control" required 
                                   placeholder="Введите название" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Описание</label>
                            <textarea asp-for="Description" class="form-control" rows="3"
                                      placeholder="Описание курса..."></textarea>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Цена (сум)</label>
                                <input asp-for="Price" type="number" class="form-control" required />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Длительность (часов)</label>
                                <input asp-for="DurationHours" type="number" class="form-control" required />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Максимум студентов</label>
                            <input asp-for="MaxStudents" type="number" class="form-control" required />
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="/Courses/Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Назад
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg"></i> Создать
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
