@page
@model RazorWebApp.Pages.Children.IndexModel
@{
    ViewData["Title"] = "Дети";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-people-fill me-2"></i>Дети</h2>
        <a asp-page="/Children/Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Добавить ребёнка
        </a>
    </div>

    <!-- Фильтры -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-5">
                    <input type="text" name="search" class="form-control" 
                           placeholder="Поиск по имени..." value="@Model.Search" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-outline-primary w-100">
                        <i class="bi bi-search"></i> Найти
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Таблица -->
    <div class="card">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>ФИО</th>
                        <th>Родитель</th>
                        <th>Возраст</th>
                        <th>Статус</th>
                        <th width="100"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Children?.Items?.Any() == true)
                    {
                        @foreach (var child in Model.Children.Items)
                        {
                            <tr>
                                <td class="fw-medium">@child.FullName</td>
                                <td>@child.ParentName</td>
                                <td>
                                    @if (child.Age.HasValue)
                                    {
                                        <text>@child.Age лет</text>
                                    }
                                    else
                                    {
                                        <text>-</text>
                                    }
                                </td>
                                <td>
                                    <span class="badge @child.StatusBadgeClass">@child.StatusName</span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-page="/Children/Edit" asp-route-id="@child.Id" 
                                           class="btn btn-outline-primary" title="Редактировать">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                Дети не найдены
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Пагинация -->
    @if (Model.Children?.TotalPages > 1)
    {
        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= Model.Children.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-page="/Children/Index" 
                           asp-route-currentPage="@i" asp-route-search="@Model.Search">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>
