@page "{id:guid}"
@model RazorWebApp.Pages.Children.EditModel
@{
    ViewData["Title"] = "Редактировать ребёнка";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-pencil me-2"></i>Редактировать ребёнка</h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success">@Model.SuccessMessage</div>
                    }
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">@Model.ErrorMessage</div>
                    }

                    @if (Model.Child != null)
                    {
                        <div class="mb-3">
                            <label class="form-label text-muted">ФИО</label>
                            <p class="fw-medium">@Model.Child.FullName</p>
                        </div>

                        <div class="mb-3">
                            <label class="form-label text-muted">Родитель</label>
                            <p>@Model.Child.ParentName</p>
                        </div>

                        <form method="post">
                            <div class="mb-3">
                                <label class="form-label">Статус</label>
                                <select asp-for="Status" class="form-select">
                                    <option value="0">Активный</option>
                                    <option value="1">Неактивный</option>
                                    <option value="2">Закончил</option>
                                    <option value="3">Отчислен</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Заметки</label>
                                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                            </div>

                            <div class="d-flex justify-content-between">
                                <a asp-page="/Children/Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left"></i> Назад
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-lg"></i> Сохранить
                                </button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
