@page
@model RazorWebApp.Pages.Children.CreateModel
@{
    ViewData["Title"] = "Добавить ребёнка";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-person-plus me-2"></i>Добавить ребёнка</h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">@Model.ErrorMessage</div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label">ФИО ребёнка</label>
                            <input asp-for="FullName" class="form-control" required 
                                   placeholder="Введите ФИО ребёнка" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Родитель</label>
                            <select asp-for="ParentId" class="form-select" required>
                                <option value="">Выберите родителя...</option>
                                @foreach (var parent in Model.AvailableParents)
                                {
                                    <option value="@parent.Id">@parent.FullName (@parent.Phone)</option>
                                }
                            </select>
                            <div class="form-text">
                                Нет подходящего? <a asp-page="/Parents/Create">Добавить родителя</a>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Дата рождения</label>
                            <input asp-for="BirthDate" type="date" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Заметки</label>
                            <textarea asp-for="Notes" class="form-control" rows="3" 
                                      placeholder="Дополнительная информация..."></textarea>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="/Children/Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Назад
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg"></i> Создать
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
