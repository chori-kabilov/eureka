@page
@model RazorWebApp.Pages.Teachers.CreateModel
@{
    ViewData["Title"] = "Добавить учителя";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-person-plus me-2"></i>Добавить учителя</h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">@Model.ErrorMessage</div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label">Пользователь</label>
                            <select asp-for="UserId" class="form-select" required>
                                <option value="">Выберите пользователя...</option>
                                @foreach (var user in Model.AvailableUsers)
                                {
                                    <option value="@user.Id">@user.FullName (@user.Phone)</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Специализация</label>
                            <input asp-for="Specialization" class="form-control" 
                                   placeholder="Например: Английский язык" />
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Тип оплаты</label>
                                <select asp-for="PaymentType" class="form-select">
                                    <option value="0">Почасовая</option>
                                    <option value="1">За занятие</option>
                                    <option value="2">Оклад</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Ставка (сум)</label>
                                <input asp-for="HourlyRate" type="number" class="form-control" 
                                       placeholder="50000" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">О себе</label>
                            <textarea asp-for="Bio" class="form-control" rows="3" 
                                      placeholder="Опыт, сертификаты..."></textarea>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="/Teachers/Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Назад
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg"></i> Создать
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
