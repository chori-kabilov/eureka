@page
@model RazorWebApp.Pages.Teachers.IndexModel
@{
    ViewData["Title"] = "Преподаватели";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Преподаватели</h1>
            <p class="page-subtitle">Управление преподавателями</p>
        </div>
        <a asp-page="/Teachers/Create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i> Добавить преподавателя
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body p-0">
        <table class="table">
            <thead>
                <tr>
                    <th>Имя</th>
                    <th>Телефон</th>
                    <th>Специализация</th>
                    <th>Оплата</th>
                    <th width="100"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Teachers?.Items?.Any() == true)
                {
                    @foreach (var t in Model.Teachers.Items)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center gap-2">
                                    <div class="stat-icon green" style="width: 32px; height: 32px; font-size: 14px; border-radius: 50%;">
                                        <i class="bi bi-person-workspace"></i>
                                    </div>
                                    <span class="fw-medium">@t.FullName</span>
                                </div>
                            </td>
                            <td>@t.Phone</td>
                            <td><span class="badge bg-primary">@(t.Specialization ?? "—")</span></td>
                            <td class="text-muted">@t.PaymentTypeName</td>
                            <td>
                                <a asp-page="/Teachers/Edit" asp-route-id="@t.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5">
                            <div class="empty-state">
                                <i class="bi bi-person-workspace"></i>
                                <h5>Нет преподавателей</h5>
                                <p>Добавьте первого преподавателя</p>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
