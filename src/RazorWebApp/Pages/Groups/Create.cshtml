@page
@model RazorWebApp.Pages.Groups.CreateModel
@{
    ViewData["Title"] = "Создать группу";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-plus-lg me-2"></i>Создать группу</h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">@Model.ErrorMessage</div>
                    }

                    <form method="post">
                        <div class="row mb-3">
                            <div class="col-md-8">
                                <label class="form-label">Название группы</label>
                                <input asp-for="Name" class="form-control" required 
                                       placeholder="Английский B1 - Утро" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Код (опционально)</label>
                                <input asp-for="Code" class="form-control" placeholder="ENG-B1-M" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Курс</label>
                                <select asp-for="CourseId" class="form-select" required>
                                    <option value="">Выберите курс...</option>
                                    @foreach (var course in Model.Courses)
                                    {
                                        <option value="@course.Id">@course.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Ответственный учитель</label>
                                <select asp-for="TeacherId" class="form-select" required>
                                    <option value="">Выберите учителя...</option>
                                    @foreach (var teacher in Model.Teachers)
                                    {
                                        <option value="@teacher.Id">@teacher.FullName</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label class="form-label">Дата начала</label>
                                <input asp-for="StartDate" type="date" class="form-control" required />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Дата окончания</label>
                                <input asp-for="EndDate" type="date" class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Макс. студентов</label>
                                <input asp-for="MaxStudents" type="number" class="form-control" min="1" required />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Заметки</label>
                            <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="/Groups/Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Назад
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg"></i> Создать
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
