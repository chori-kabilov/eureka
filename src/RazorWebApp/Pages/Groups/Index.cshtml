@page
@model RazorWebApp.Pages.Groups.IndexModel
@{
    ViewData["Title"] = "Группы";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Группы</h1>
            <p class="page-subtitle">Управление учебными группами</p>
        </div>
        <a asp-page="/Groups/Create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i> Создать группу
        </a>
    </div>
</div>

<!-- Фильтры -->
<div class="card mb-4">
    <div class="card-body py-3">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label">Поиск</label>
                <input type="text" name="search" class="form-control" placeholder="Название группы..." value="@Model.Search" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Статус</label>
                <select name="status" class="form-select">
                    <option value="">Все статусы</option>
                    <option value="1" selected="@(Model.Status == 1)">Активные</option>
                    <option value="0" selected="@(Model.Status == 0)">Черновики</option>
                    <option value="2" selected="@(Model.Status == 2)">Завершённые</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-funnel me-1"></i> Фильтр
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Карточки групп -->
<div class="row">
    @if (Model.Groups?.Items?.Any() == true)
    {
        @foreach (var g in Model.Groups.Items)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-start justify-content-between mb-3">
                            <div class="stat-icon purple" style="width: 48px; height: 48px; font-size: 20px; border-radius: 12px;">
                                <i class="bi bi-people"></i>
                            </div>
                            <span class="badge @g.StatusBadgeClass">@g.StatusName</span>
                        </div>
                        <h5 class="fw-semibold mb-1">@g.Name</h5>
                        @if (!string.IsNullOrEmpty(g.Code))
                        {
                            <small class="text-muted d-block mb-2">@g.Code</small>
                        }
                        <p class="text-muted small mb-2">
                            <i class="bi bi-book me-1"></i>@g.CourseName
                        </p>
                        <p class="text-muted small mb-3">
                            <i class="bi bi-person-workspace me-1"></i>@g.ResponsibleTeacherName
                        </p>
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <span class="badge bg-primary me-2">
                                    <i class="bi bi-people-fill me-1"></i>@g.CurrentStudents / @g.MaxStudents
                                </span>
                            </div>
                            <div class="text-muted small">
                                <i class="bi bi-calendar me-1"></i>@g.StartDate.ToString("dd.MM.yy") — @(g.EndDate?.ToString("dd.MM.yy") ?? "...")
                            </div>
                        </div>
                        <div class="d-flex gap-1">
                            <a asp-page="/Groups/Details" asp-route-id="@g.Id" class="btn btn-sm btn-primary flex-fill">
                                <i class="bi bi-eye me-1"></i> Подробнее
                            </a>
                            <a asp-page="/Groups/Journal" asp-route-id="@g.Id" class="btn btn-sm btn-outline-warning" title="Журнал">
                                <i class="bi bi-journal-text"></i>
                            </a>
                            <a asp-page="/Groups/Edit" asp-route-id="@g.Id" class="btn btn-sm btn-outline-secondary" title="Редактировать">
                                <i class="bi bi-pencil"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="empty-state">
                        <i class="bi bi-collection"></i>
                        <h5>Нет групп</h5>
                        <p>Создайте первую группу</p>
                        <a asp-page="/Groups/Create" class="btn btn-primary mt-2">
                            <i class="bi bi-plus-lg me-1"></i> Создать группу
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if ((Model.Groups?.TotalPages ?? 0) > 1 || Model.PageSize != 12)
{
    <nav class="mt-4">
        <div class="d-flex justify-content-center align-items-center gap-3">
            <div class="d-flex align-items-center gap-2">
                <span class="text-muted small">Показывать:</span>
                <select class="form-select form-select-sm" style="width: auto;" onchange="window.location.href='?currentPage=1&search=@Model.Search&status=@Model.Status&pageSize=' + this.value">
                    <option value="12" selected="@(Model.PageSize == 12)">12</option>
                    <option value="24" selected="@(Model.PageSize == 24)">24</option>
                    <option value="50" selected="@(Model.PageSize == 50)">50</option>
                </select>
            </div>
            @if ((Model.Groups?.TotalPages ?? 0) > 1)
            {
                <ul class="pagination mb-0">
                    @for (int i = 1; i <= Model.Groups!.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-page="/Groups/Index" asp-route-currentPage="@i" asp-route-search="@Model.Search" asp-route-status="@Model.Status" asp-route-pageSize="@Model.PageSize">@i</a>
                        </li>
                    }
                </ul>
            }
        </div>
    </nav>
}
