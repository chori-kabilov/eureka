<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EUREKA</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link href="/css/eureka.css" rel="stylesheet" />
</head>
<body>
    @if (User.Identity?.IsAuthenticated == true)
    {
        <!-- Верхняя навигация -->
        <nav class="top-navbar">
            <div class="top-navbar-brand">
                <span class="brand-text">EUREKA</span>
            </div>
            <div class="top-navbar-actions">
                <button class="icon-btn"><i class="bi bi-search"></i></button>
                <button class="icon-btn"><i class="bi bi-moon"></i></button>
                <div class="lang-switch">
                    <span class="flag">🇷🇺</span>
                    <span>RU</span>
                </div>
                <div class="user-avatar">
                    <i class="bi bi-person"></i>
                </div>
            </div>
        </nav>

        <div class="app-container">
            <!-- Боковое меню -->
            <aside class="sidebar">
                <nav class="sidebar-nav">
                    <a class="nav-item @(ViewContext.RouteData.Values["page"]?.ToString()?.Contains("Dashboard") == true ? "active" : "")" 
                       asp-page="/Dashboard/Index">
                        <i class="bi bi-house"></i>
                        <span>Главная</span>
                    </a>
                    <a class="nav-item @(ViewContext.RouteData.Values["page"]?.ToString()?.Contains("Students") == true ? "active" : "")" 
                       asp-page="/Students/Index">
                        <i class="bi bi-mortarboard"></i>
                        <span>Студенты</span>
                    </a>
                    <a class="nav-item @(ViewContext.RouteData.Values["page"]?.ToString()?.Contains("Teachers") == true ? "active" : "")" 
                       asp-page="/Teachers/Index">
                        <i class="bi bi-person-workspace"></i>
                        <span>Преподаватели</span>
                    </a>
                    <a class="nav-item @(ViewContext.RouteData.Values["page"]?.ToString()?.Contains("Courses") == true ? "active" : "")" 
                       asp-page="/Courses/Index">
                        <i class="bi bi-book"></i>
                        <span>Курсы</span>
                    </a>
                    <a class="nav-item @(ViewContext.RouteData.Values["page"]?.ToString()?.Contains("Groups") == true ? "active" : "")" 
                       asp-page="/Groups/Index">
                        <i class="bi bi-people"></i>
                        <span>Группы</span>
                    </a>
                    <a class="nav-item @(ViewContext.RouteData.Values["page"]?.ToString()?.Contains("Children") == true ? "active" : "")" 
                       asp-page="/Children/Index">
                        <i class="bi bi-emoji-smile"></i>
                        <span>Дети</span>
                    </a>
                    <a class="nav-item @(ViewContext.RouteData.Values["page"]?.ToString()?.Contains("Parents") == true ? "active" : "")" 
                       asp-page="/Parents/Index">
                        <i class="bi bi-person-hearts"></i>
                        <span>Родители</span>
                    </a>
                    <a class="nav-item @(ViewContext.RouteData.Values["page"]?.ToString()?.Contains("Rooms") == true ? "active" : "")" 
                       asp-page="/Rooms/Index">
                        <i class="bi bi-building"></i>
                        <span>Кабинеты</span>
                    </a>

                    <div class="nav-divider"></div>

                    <a class="nav-item @(ViewContext.RouteData.Values["page"]?.ToString()?.Contains("Users") == true ? "active" : "")" 
                       asp-page="/Users/Index">
                        <i class="bi bi-gear"></i>
                        <span>Пользователи</span>
                    </a>
                </nav>

                <div class="sidebar-collapse-btn">
                    <i class="bi bi-chevron-left"></i>
                </div>
            </aside>

            <!-- Основной контент -->
            <main class="main-content">
                @RenderBody()
            </main>
        </div>
    }
    else
    {
        <div class="auth-container">
            @RenderBody()
        </div>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>