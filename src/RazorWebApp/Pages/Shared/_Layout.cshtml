<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EUREKA</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link href="/css/eureka.css" rel="stylesheet" />
</head>
<body>
    @if (User.Identity?.IsAuthenticated == true)
    {
        <!-- Верхняя навигация -->
        <nav class="top-navbar">
            <div class="top-navbar-brand">
                <div class="brand-icon">
                    <i class="bi bi-mortarboard-fill"></i>
                </div>
                <span class="brand-text">EUREKA</span>
                <span class="brand-badge">CRM</span>
            </div>
            <div class="top-navbar-actions">
                <button class="icon-btn" title="Поиск"><i class="bi bi-search"></i></button>
                <button class="icon-btn" id="themeToggle" title="Тема"><i class="bi bi-moon"></i></button>
                <div class="notification-btn">
                    <button class="icon-btn"><i class="bi bi-bell"></i></button>
                    <span class="notification-dot"></span>
                </div>
                <div class="user-menu dropdown">
                    <button class="user-avatar dropdown-toggle" data-bs-toggle="dropdown">
                        <span class="avatar-text">@User.Identity?.Name?.Substring(0, 1).ToUpper()</span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><span class="dropdown-item-text"><strong>@User.Identity?.Name</strong></span></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="/Users/Edit"><i class="bi bi-person me-2"></i>Профиль</a></li>
                        <li><a class="dropdown-item text-danger" href="/Auth/Logout"><i class="bi bi-box-arrow-right me-2"></i>Выход</a></li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="app-container">
            <!-- Боковое меню -->
            <aside class="sidebar">
                <nav class="sidebar-nav">
                    <a class="nav-item @(ViewContext.RouteData.Values["page"]?.ToString()?.Contains("Dashboard") == true ? "active" : "")" 
                       asp-page="/Dashboard/Index">
                        <i class="bi bi-house"></i>
                        <span>Главная</span>
                    </a>

                    <!-- Группа: Люди -->
                    <div class="nav-group">
                        <button class="nav-group-toggle" data-group="people">
                            <i class="bi bi-people-fill"></i>
                            <span>Люди</span>
                            <i class="bi bi-chevron-down nav-chevron"></i>
                        </button>
                        <div class="nav-group-items" id="people-items">
                            <a class="nav-subitem @(ViewContext.RouteData.Values["page"]?.ToString()?.Contains("Students") == true ? "active" : "")" 
                               asp-page="/Students/Index">
                                <i class="bi bi-mortarboard"></i>
                                <span>Студенты</span>
                            </a>
                            <a class="nav-subitem @(ViewContext.RouteData.Values["page"]?.ToString()?.Contains("Teachers") == true ? "active" : "")" 
                               asp-page="/Teachers/Index">
                                <i class="bi bi-person-workspace"></i>
                                <span>Преподаватели</span>
                            </a>
                            <a class="nav-subitem @(ViewContext.RouteData.Values["page"]?.ToString()?.Contains("Parents") == true ? "active" : "")" 
                               asp-page="/Parents/Index">
                                <i class="bi bi-person-hearts"></i>
                                <span>Родители</span>
                            </a>
                            <a class="nav-subitem @(ViewContext.RouteData.Values["page"]?.ToString()?.Contains("Children") == true ? "active" : "")" 
                               asp-page="/Children/Index">
                                <i class="bi bi-emoji-smile"></i>
                                <span>Дети</span>
                            </a>
                        </div>
                    </div>

                    <!-- Группа: Обучение -->
                    <div class="nav-group">
                        <button class="nav-group-toggle" data-group="learning">
                            <i class="bi bi-book-fill"></i>
                            <span>Обучение</span>
                            <i class="bi bi-chevron-down nav-chevron"></i>
                        </button>
                        <div class="nav-group-items" id="learning-items">
                            <a class="nav-subitem @(ViewContext.RouteData.Values["page"]?.ToString()?.Contains("Courses") == true ? "active" : "")" 
                               asp-page="/Courses/Index">
                                <i class="bi bi-book"></i>
                                <span>Курсы</span>
                            </a>
                            <a class="nav-subitem @(ViewContext.RouteData.Values["page"]?.ToString()?.Contains("Groups") == true ? "active" : "")" 
                               asp-page="/Groups/Index">
                                <i class="bi bi-people"></i>
                                <span>Группы</span>
                            </a>
                        </div>
                    </div>

                    <!-- Группа: Расписание -->
                    <div class="nav-group">
                        <button class="nav-group-toggle" data-group="schedule">
                            <i class="bi bi-calendar3"></i>
                            <span>Расписание</span>
                            <i class="bi bi-chevron-down nav-chevron"></i>
                        </button>
                        <div class="nav-group-items" id="schedule-items">
                            <a class="nav-subitem @(ViewContext.RouteData.Values["page"]?.ToString()?.Contains("Schedule") == true ? "active" : "")" 
                               asp-page="/Schedule/Index">
                                <i class="bi bi-calendar3"></i>
                                <span>Календарь</span>
                            </a>
                            <a class="nav-subitem @(ViewContext.RouteData.Values["page"]?.ToString()?.Contains("Lessons/Index") == true ? "active" : "")" 
                               asp-page="/Lessons/Index">
                                <i class="bi bi-journal-text"></i>
                                <span>Занятия</span>
                            </a>
                            <a class="nav-subitem @(ViewContext.RouteData.Values["page"]?.ToString()?.Contains("Grading") == true ? "active" : "")" 
                               asp-page="/Grading/Index">
                                <i class="bi bi-star"></i>
                                <span>Оценки</span>
                            </a>
                        </div>
                    </div>

                    <!-- Группа: Настройки -->
                    <div class="nav-group">
                        <button class="nav-group-toggle" data-group="settings">
                            <i class="bi bi-gear-fill"></i>
                            <span>Настройки</span>
                            <i class="bi bi-chevron-down nav-chevron"></i>
                        </button>
                        <div class="nav-group-items" id="settings-items">
                            <a class="nav-subitem @(ViewContext.RouteData.Values["page"]?.ToString()?.Contains("Rooms") == true ? "active" : "")" 
                               asp-page="/Rooms/Index">
                                <i class="bi bi-building"></i>
                                <span>Кабинеты</span>
                            </a>
                            <a class="nav-subitem @(ViewContext.RouteData.Values["page"]?.ToString()?.Contains("Users") == true ? "active" : "")" 
                               asp-page="/Users/Index">
                                <i class="bi bi-person-gear"></i>
                                <span>Пользователи</span>
                            </a>
                        </div>
                    </div>
                </nav>

                <div class="sidebar-collapse-btn">
                    <i class="bi bi-chevron-left"></i>
                </div>
            </aside>

            <!-- Основной контент -->
            <main class="main-content">
                @RenderBody()
            </main>
        </div>
    }
    else
    {
        <div class="auth-container">
            @RenderBody()
        </div>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Раскрывающиеся подменю
        document.addEventListener('DOMContentLoaded', function() {
            const toggles = document.querySelectorAll('.nav-group-toggle');
            const savedState = JSON.parse(localStorage.getItem('sidebarState') || '{}');
            
            // Автораскрытие группы с активным элементом
            document.querySelectorAll('.nav-subitem.active').forEach(function(activeItem) {
                const group = activeItem.closest('.nav-group');
                if (group) {
                    const toggle = group.querySelector('.nav-group-toggle');
                    const items = group.querySelector('.nav-group-items');
                    if (toggle && items) {
                        toggle.classList.add('expanded', 'active');
                        items.classList.add('show');
                        savedState[toggle.dataset.group] = true;
                    }
                }
            });
            
            // Восстановление сохранённого состояния
            toggles.forEach(function(toggle) {
                const groupName = toggle.dataset.group;
                if (savedState[groupName]) {
                    toggle.classList.add('expanded');
                    const items = toggle.nextElementSibling;
                    if (items) items.classList.add('show');
                }
                
                // Клик для toggle
                toggle.addEventListener('click', function() {
                    const items = this.nextElementSibling;
                    const isExpanded = this.classList.contains('expanded');
                    
                    this.classList.toggle('expanded');
                    items.classList.toggle('show');
                    
                    // Сохранение в localStorage
                    const state = JSON.parse(localStorage.getItem('sidebarState') || '{}');
                    state[groupName] = !isExpanded;
                    localStorage.setItem('sidebarState', JSON.stringify(state));
                });
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>