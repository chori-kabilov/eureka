@page
@model RazorWebApp.Pages.Students.IndexModel
@{
    ViewData["Title"] = "Студенты";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Студенты</h1>
            <p class="page-subtitle">Управление студентами учебного центра</p>
        </div>
        <a asp-page="/Students/Create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i> Добавить студента
        </a>
    </div>
</div>

<!-- Фильтры -->
<div class="card mb-4">
    <div class="card-body py-3">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label">Поиск</label>
                <input type="text" name="search" class="form-control" placeholder="Имя или телефон..." value="@Model.Search" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search me-1"></i> Искать
                </button>
            </div>
            @if (!string.IsNullOrEmpty(Model.Search))
            {
                <div class="col-md-2">
                    <a asp-page="/Students/Index" class="btn btn-outline-secondary w-100">Сбросить</a>
                </div>
            }
        </form>
    </div>
</div>

<!-- Таблица -->
<div class="card">
    <div class="card-body p-0">
        <table class="table">
            <thead>
                <tr>
                    <th>Имя</th>
                    <th>Телефон</th>
                    <th>Баланс</th>
                    <th>Статус</th>
                    <th>Дата регистрации</th>
                    <th width="100"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Students?.Items?.Any() == true)
                {
                    @foreach (var s in Model.Students.Items)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center gap-2">
                                    <div class="user-avatar" style="width: 32px; height: 32px; font-size: 12px;">
                                        <i class="bi bi-person"></i>
                                    </div>
                                    <span class="fw-medium">@s.FullName</span>
                                </div>
                            </td>
                            <td>@s.Phone</td>
                            <td class="@(s.Balance >= 0 ? "text-success" : "text-danger")">
                                @s.Balance.ToString("N0") ₸
                            </td>
                            <td><span class="badge @s.StatusBadgeClass">@s.StatusName</span></td>
                            <td class="text-muted">@s.CreatedAt.ToString("dd.MM.yyyy")</td>
                            <td>
                                <a asp-page="/Students/Edit" asp-route-id="@s.Id" class="btn btn-sm btn-outline-primary" title="Редактировать">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6">
                            <div class="empty-state">
                                <i class="bi bi-mortarboard"></i>
                                <h5>Нет студентов</h5>
                                <p>Добавьте первого студента</p>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if ((Model.Students?.TotalPages ?? 0) > 1)
{
    <nav class="mt-4">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.Students!.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-page="/Students/Index" asp-route-currentPage="@i" asp-route-search="@Model.Search">@i</a>
                </li>
            }
        </ul>
    </nav>
}
