@page
@model RazorWebApp.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Пользователи";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-people me-2"></i>Пользователи</h2>
</div>

<!-- Фильтры -->
<form method="get" class="row g-3 mb-4">
    <div class="col-md-5">
        <input type="text" name="search" class="form-control" 
               placeholder="Поиск по имени или телефону" value="@Model.Search" />
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary w-100">
            <i class="bi bi-search"></i> Поиск
        </button>
    </div>
</form>

<!-- Таблица -->
<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>ФИО</th>
                    <th>Телефон</th>
                    <th>Роли</th>
                    <th>Дата регистрации</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Users?.Items != null)
                {
                    @foreach (var user in Model.Users.Items)
                    {
                        <tr>
                            <td class="fw-medium">@user.FullName</td>
                            <td>@user.Phone</td>
                            <td>
                                @if (user.IsAdmin)
                                {
                                    <span class="badge bg-danger me-1">Admin</span>
                                }
                                @if (user.IsTeacher)
                                {
                                    <span class="badge bg-primary me-1">Teacher</span>
                                }
                                @if (user.IsStudent)
                                {
                                    <span class="badge bg-success me-1">Student</span>
                                }
                                @if (user.IsParent)
                                {
                                    <span class="badge bg-info me-1">Parent</span>
                                }
                                @if (!user.IsAdmin && !user.IsTeacher && !user.IsStudent && !user.IsParent)
                                {
                                    <span class="badge bg-secondary">User</span>
                                }
                            </td>
                            <td>@user.CreatedAt.ToString("dd.MM.yyyy")</td>
                            <td>
                                <a asp-page="/Users/Edit" asp-route-id="@user.Id" 
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted py-4">
                            <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                            Нет пользователей
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Пагинация -->
@if (Model.Users != null && Model.Users.TotalPages > 1)
{
    <nav class="mt-3">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.Users.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-page="/Users/Index" 
                       asp-route-currentPage="@i" asp-route-search="@Model.Search">@i</a>
                </li>
            }
        </ul>
    </nav>
}
